      aviso.textContent='Guardado solo en este dispositivo.';
    })
    document.getElementById('copiar-carta').addEventListener('click',async()=>{
      try{await navigator.clipboard.writeText(carta.value||''); aviso.textContent='Copiado al portapapeles.';}catch{aviso.textContent='No se pudo copiar. Selecciona y copia manualmente.'}
    })
    // Cargar carta previa
    const savedCarta = localStorage.getItem('ti_carta');
    if(savedCarta) carta.value = savedCarta;
  </script></body>
