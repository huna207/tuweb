  </main>  <script>
    // A√±o din√°mico
    document.getElementById('year').textContent = new Date().getFullYear();

    // Bot√≥n de idioma (placeholder para futuro)
    document.getElementById('btn-idioma').addEventListener('click',()=>alert('Pr√≥ximamente: versi√≥n EN/ES'))

    // Bot√≥n de ayuda inmediata ‚Äî EDITA el enlace antes de publicar
    document.getElementById('btn-ayuda').addEventListener('click', (e)=>{
      e.preventDefault();
      alert('Configura este bot√≥n con enlaces y tel√©fonos de ayuda de tu pa√≠s antes de publicar. Si hay peligro inmediato, llama a 911/112.');
    })

    // Mood check-in
    const moodButtons = document.querySelectorAll('.mood button');
    const moodResult = document.getElementById('mood-result');
    moodButtons.forEach(btn=>{
      btn.addEventListener('click',()=>{
        moodButtons.forEach(b=>b.classList.remove('active'));
        btn.classList.add('active');
        const mood = btn.dataset.mood;
        localStorage.setItem('ti_mood', mood);
        const mensajes = {
          mal: 'Gracias por decirlo. Respira conmigo y luego elige una herramienta. No tienes que estar sola.',
          triste: 'Siento que te sientas as√≠. Una historia breve o escribir gratitud puede aliviar un poco.',
          ansiosa: 'Vamos paso a paso. Prueba 4‚Äì7‚Äì8 y despu√©s camina 5 minutos.',
          neutral: 'Bien por chequear en ti. ¬øTe gustar√≠a escribir una nota para tu yo futuro?',
          bien: '¬°Qu√© lindo leerte as√≠! Comparte algo amable contigo o con otra persona.'
        };
        moodResult.textContent = mensajes[mood] || '';
      })
    })
    // Cargar mood previo
    const savedMood = localStorage.getItem('ti_mood');
    if(savedMood){
      const btn = document.querySelector(`.mood button[data-mood="${savedMood}"]`);
      if(btn) btn.click();
    }

    // Respiraci√≥n 4‚Äì7‚Äì8
    let timerId; let stage = 'ready'; let count = 0; let running=false;
    const t = document.getElementById('timer');
    const s = document.getElementById('stage');
    function setStage(name, seconds){
      stage = name; count = seconds; t.textContent = String(seconds).padStart(2,'0');
      s.textContent = ({inhale:'Inhala',hold:'Mant√©n',exhale:'Exhala',ready:'Listo cuando t√∫ quieras'})[name]||name;
    }
    function tick(){
      if(count>0){ count--; t.textContent = String(count).padStart(2,'0'); }
      else{
        if(stage==='inhale'){ setStage('hold',7); }
        else if(stage==='hold'){ setStage('exhale',8); }
        else if(stage==='exhale'){ rounds++; if(rounds>=4){ stop(); s.textContent='Bien hecho. Bebe agua y sigue suave contigo.'; return; } setStage('inhale',4); }
      }
    }
    let rounds = 0;
    function start(){ if(running) return; running=true; rounds=0; setStage('inhale',4); timerId=setInterval(tick,1000); }
    function stop(){ running=false; clearInterval(timerId); setStage('ready',0); }
    document.getElementById('start').addEventListener('click', start);
    document.getElementById('stop').addEventListener('click', stop);
    document.getElementById('info').addEventListener('click',()=>{
      alert('La respiraci√≥n 4‚Äì7‚Äì8 activa el sistema nervioso parasimp√°tico y puede reducir la ansiedad moment√°nea. No reemplaza ayuda profesional.');
    })

    // Diario de gratitud
    const form = document.getElementById('gratitud-form');
    const list = document.getElementById('gratitud-list');
    function renderGratitud(){
      const items = JSON.parse(localStorage.getItem('ti_gratitud')||'[]');
      if(items.length===0){ list.textContent = 'A√∫n no hay entradas.'; return; }
      list.innerHTML = '<strong>Tus entradas:</strong><br>' + items.map((e,i)=>`‚Ä¢ ${e.join(' ¬∑ ')}`).join('<br>');
    }
    renderGratitud();
    form.addEventListener('submit', (e)=>{
      e.preventDefault();
      const data = new FormData(form);
      const entry = [data.get('g1'),data.get('g2'),data.get('g3')].map(v=>String(v||'').trim()).filter(Boolean);
      if(entry.length<3){ alert('Completa las 3 cosas.'); return; }
      const items = JSON.parse(localStorage.getItem('ti_gratitud')||'[]');
      items.unshift(entry);
      localStorage.setItem('ti_gratitud', JSON.stringify(items.slice(0,20)));
      form.reset(); renderGratitud();
    })
    document.getElementById('ver-gratitud').addEventListener('click', renderGratitud);

    // Carta a mi yo futuro
    const carta = document.getElementById('carta');
    const aviso = document.getElementById('carta-aviso');
